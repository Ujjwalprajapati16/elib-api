{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Build Options */
    "rootDir": ".",                 // Covers server.ts in root and src/ folder
    "outDir": "./dist",             // Where build files go
    "sourceMap": true,              // Helpful for debugging production errors
    "removeComments": true,         // Cleaner output
    
    /* Handling .ts extensions in imports */
    "allowImportingTsExtensions": true, 
    "noEmit": true                  // We use tsup for the build, tsc for checking
  },
  "include": ["src/**/*", "server.ts"],
  "exclude": ["node_modules", "dist"]
}